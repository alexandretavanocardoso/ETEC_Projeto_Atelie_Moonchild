@model AtelieMoonchild.ViewModels.ResetPasswordModel

@{ ViewData["Title"] = "Recupeção de Senha";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml"; }

<div class="login-box">

    <form asp-action="ResetPassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" hidden></div>
        <input type="hidden" asp-for="Email" />
        <input type="button" asp-for="Token" />

        <h2 class="titulo">Definir Nova Senha</h2>

        <div class="user-box">
            <!-- Senha de acesso -->
            <input asp-for="Senha">
            <span asp-validation-for="Senha" class="text-danger"></span>
       </div>

        <div class="user-box">
            <!-- Email de acesso -->
            <input asp-for=" ConfirmarSenha" class="input">
            <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
        </div>

        <div style=" display: flex; align-items: center; justify-content: center;">
            <button type="submit" value="submit" id="" class="btn btn-outline-info btn-entrar"> Confirmar </button>

        </div>
    </form>
</div>

@section Scripts{

    @* Obrigatorio para estourar o erro *@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}