@model AtelieMoonchild.Models.Categoria

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; @* Escolhe o _layout.cshtml que vai usar *@
}

@section Styles{
    <link href="~/css-migrations-categoria/Delete.css" rel="stylesheet" />

    <style>
        .btn {
            text-align: center;
            width: 150px;
            padding: 8px 0 8px 0;
        }

        .btn-danger {
            margin-right: 10px;
        }

        .btn-primary {
            margin-left: 10px;
        }
    </style>
}

<div class="content">

    <h1>Deletar Categoria</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>

        <form asp-action="Delete" style=" display:flex; flex-direction:row;">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </form>
    </div>
</div>
