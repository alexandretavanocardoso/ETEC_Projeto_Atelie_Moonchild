@model AtelieMoonchild.Models.Contato

@{
    ViewData["Title"] = "E-mail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{

    <link href="~/css-migrations-contato/Delete.css" rel="stylesheet" />

    <style>
        .btn {
            text-align: center;
            width: 150px;
            padding: 8px 0 8px 0;
        }

        .btn-danger {
            margin-right: 10px;
        }

        .btn-primary {
            margin-left: 10px;
        }
    </style>
}

<div class="content">

    <h1>Deletar E-mail</h1>
    <div>
        <div class="row">
            <div class="col-md-6 col-6">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6 col-6">
                <div class="form-group">
                    <label asp-for="Assunto" class="control-label"></label>
                    <input asp-for="Assunto" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-12 col-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6 col-6">
                <div class="form-group">
                    <label asp-for="DataContato" class="control-label"></label>
                    <input asp-for="DataContato" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6 col-6">
                <div class="form-group">
                    <label asp-for="DataRetorno" class="control-label"></label>
                    <input asp-for="DataRetorno" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-12 col-12">
                <div class="form-group">
                    <label asp-for="Mensagem" class="control-label"></label>
                    <textarea asp-for="Mensagem" class="form-control" readonly></textarea>
                    <span asp-validation-for="Retorno" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12 col-12">
                <div class="form-group">
                    <label asp-for="Retorno" class="control-label"></label>
                    <textarea asp-for="Retorno" class="form-control" readonly></textarea>
                    <span asp-validation-for="Retorno" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12 col-12">
                <form asp-action="Delete" style=" display:flex; flex-direction:row;">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger" /> 
                    <a asp-action="Index" class="btn btn-primary">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>