<!-- Carregar as listasdo homecontroller.cs-->
@model IEnumerable<AtelieMoonchild.ViewModels.CategoriaViewModel>



@{
    ViewData["Title"] = "Galeria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(../../img/banner/galeria.jpg);">
</section>
<!-- Breadcrumb Area End -->
<!-- Gallery Area Start -->
<div class="alime-portfolio-area section-padding-80 clearfix ">
    <div class="container-fluid ">
        <div class="row ">
            <div class="col-12 ">
                <!-- Projects Menu -->
                <div class="alime-projects-menu ">
                    <div class="portfolio-menu text-center ">
                        <button class="btn active " data-filter="* ">Todos</button>
                        @foreach (var item in Model)
                        {
                            <button class="btn " data-filter=".@item.Nome.ToLower()">@item.Nome</button>
                        }
                    </div>
                </div>
            </div>
        </div>

		<!-- Galeria Aqui -->
        <div class="row alime-portfolio ">

            @foreach (var cat in Model)
            {
                @foreach (var pro in cat.Produtos)
                {
                    <!-- Single Gallery Item -->
                    <div class="col-12 col-sm-6 col-lg-3 single_gallery_item @cat.Nome.ToLower() mb-30 wow fadeInUp" data-wow-delay="@string.Concat(pro.Delay, "ms")">
                        <div class="single-portfolio-content">
                            <img src="@Url.Content(pro.Image)" alt="Artes">
                            <div class="hover-content">
                                <a href="@Url.Content(pro.Image)" class="portfolio-img">+</a>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</div>


<!-- Gallery Area End -->
<script src="~/js/Paginas/galeria.js"></script>
