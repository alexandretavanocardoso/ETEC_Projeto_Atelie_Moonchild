<form id="formcontato" asp-action="Contatos" method="post" data-ajax="true" data-ajax-method="post" data-ajax-complete="voltou" data-ajax-failure="falhou">
    <!-- Contato -->
    <div class="fundo-contact">
        <div class="container-contact-index">
            <div class="form-row">
                <div class="form-group col-md-6 col-12">
                    <label class="label-contact">Nome</label>
                    <input class="form-control" asp-for="Contato.Nome">
                    <span class="text-danger" asp-validation-for="Contato.Nome"></span>
                </div>
                <div class="form-group col-md-6 col-12">
                    <label class="label-contact">Assunto</label>
                    <input class="form-control" asp-for="Contato.Assunto">
                    <span class="text-danger" asp-validation-for="Contato.Assunto"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12 col-12">
                    <label class="label-contact">E-mail</label>
                    <input class="form-control" asp-for="Contato.Email">
                    <span class="text-danger" asp-validation-for="Contato.Email"></span>
                </div>
            </div>
            <div class="form-row col-md-12 col-12">
                <div class="form-group col-md-12">
                    <label class="label-contact" for="inputCity">Mensagem</label>
                    <textarea id="textarea" class="form-control" rows="15" cols="15" asp-for="Contato.Mensagem"></textarea>
                    <span class="text-danger" asp-validation-for="Contato.Mensagem"></span>
                </div>
            </div>
            <div class="col-md-12 col-12 contact-flex">
                <button class="btn btn-contact"> Enviar </button>
            </div>
        </div>
    </div>
</form>



